    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.22.1" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\AeroclubTimekeeper.Storage\aeroclub.db" Link="aeroclub.db">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AeroclubTimekeeper.Storage\AeroclubTimekeeper.Storage.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="AeroclubTimekeeperApi.http">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
